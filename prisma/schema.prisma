generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Company {
  id               Int        @id @default(autoincrement())
  name             String
  email            String     @unique
  cnpj             String     @unique
  corporateName    String
  phone            String
  altPhone         String
  password         String
  confirmedAccount Boolean
  isAdmin          Boolean
  schedules        Schedule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("companies")
}

model Schedule {
  id         Int      @id @default(autoincrement())
  date       DateTime
  isActive   Boolean
  frequency  String
  Company    Company? @relation(fields: [company_id], references: [id])
  company_id Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("schedules")
}
